{
  "compilerOptions": {
    "outDir": "frontend/dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": ["frontend/**/*"],
  "exclude": [
    "webpack.config.js",
    "public/dist"
  ],
  "types": [
    "typePatches"
  ]
}